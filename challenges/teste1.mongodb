use("aggregations")

db.trips.aggregate([
  {
    $project: {
      _id: 0,
      user_type: "$usertype",
      travel_hours: {
        
          
            $divide: [
              {$subtract: ["$stopTime","$startTime",]},
              {$multiply: [60, 60, 1000]}
            ]
          
          
        
      }
    }
  },
  {
    $group: {
      _id: "$user_type",
      duracao_Media: {$avg: "$travel_hours"}
    }
  },
  {
    $project: {
      tipo: "$_id",
      _id: 0,
      duracaoMedia: {
        $round: ["$duracao_Media", 2]
      }
    }
  }
])
